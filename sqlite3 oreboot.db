-- Table for Login System
CREATE TABLE users (
    id INTEGER PRIMARY KEY,
    username TEXT,
    password_hash TEXT,
    cloud_storage_used INTEGER
);

-- Table for Pro I Store
CREATE TABLE pro_i_store (
    app_id INTEGER PRIMARY KEY,
    app_name TEXT,
    file_type TEXT, -- .oaf
    developer TEXT
);

